    <servlet>
        <description/>
        <display-name>Log4jMdcDemo</display-name>
        <servlet-name>Log4jMdcDemo</servlet-name>
        <servlet-class>Log4jMdcDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Log4jMdcDemo</servlet-name>
        <url-pattern>/Log4jMdcDemo</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>AuthenticationFilter</filter-class>
        <!--<async-supported>true</async-supported>-->
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            E:\Resources\Etracker_AttachedFiles\
        </param-value>
    </context-param>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>upload-resume</param-name>
        <param-value>
           E:\Resources\Etracker_AttachedFiles\Resume\
        </param-value>
    </context-param>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>Reimbursement_vouchers</param-name>
        <param-value>
            E:\Resources\Reimbursement_vouchers\
        </param-value>
    </context-param>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>upload-doc</param-name>
        <param-value>
            E:\Resources\Etracker_AttachedFiles\CRMAttachFile\
        </param-value>
    </context-param>
        <context-param>
        <description>Location to store uploaded file</description>
        <param-name>upload-user-photo</param-name>
        <param-value>
            E:\Resources\Etracker_AttachedFiles\userPhotos\
        </param-value>
    </context-param>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>upload-user-doc</param-name>
        <param-value>
            E:\Resources\Etracker_AttachedFiles\ERMAttachFile\
        </param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/CaptchaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file> setup.jsp </welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>com.pack.SessionCounter</listener-class>
    </listener>
    <listener>
        <listener-class>com.pack.MyServlerContextListener</listener-class>
    </listener>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/inform.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/pageNotFound.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>pack.eminent.encryption.CaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/Captcha.png</url-pattern>
    </servlet-mapping>
